<div class="container mt-5" style="max-width: 700px;">
  <!-- 見出し -->
  <div class="text-center mb-4 pb-2 border-bottom">
    <h2 class="fw-bold text-dark">
      <i class="bi bi-building-add text-primary me-2"></i> プロジェクト新規作成
    </h2>
  </div>

  <div class="card shadow-sm mx-auto">
    <div class="card-body p-4">
      <%= form_with(model: project, data: { turbo: false }, local: true) do |f| %>
        <div class="mb-3">
          <%= f.label :name, "プロジェクト名（施設名）", class: "form-label fw-bold" %>
          <%= f.text_field :name,
                class: "form-control form-control-lg"%>
        </div>

        <div class="d-flex justify-content-center gap-3 mt-4">
          <%= f.submit "保存", class: "btn btn-primary px-4 fw-bold shadow-sm" %>
          <%= link_to "戻る", projects_path, class: "btn btn-secondary px-4 shadow-sm" %>
        </div>
      <% end %>

      <% if project.persisted? %>
        <div class="text-center mt-4">
          <%= button_to "削除する", project_path(project),
              method: :delete,
              data: { turbo: false },
              onclick: "return confirm('このプロジェクトに関するすべてのデータが削除されます。本当に削除しますか？')",
              class: "btn btn-danger px-4 shadow-sm fw-bold" %>
        </div>
      <% end %>
    </div>
  </div>
</div>