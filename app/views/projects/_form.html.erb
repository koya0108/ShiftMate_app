<div class="card mx-auto mt-4" style="width: 600px;">
  <div class="card-body">
    <%= form_with(model: project, data: { turbo: false }, local: true) do |f| %>
      <div class="mb-3">
        <%= f.label :name, "プロジェクト", class: "form-label fw-bold" %>
        <%= f.text_field :name, class: "form-control", placeholder: "施設名を入力してください" %>
      </div>

      <div class="d-flex justify-content-between">
        <!-- 左側：保存ボタン -->
        <%= f.submit "保存", class: "btn btn-primary btn-sm" %>

        <!-- 右側：削除 & 戻るボタン -->
        <div>
          <% if project.persisted? %>
            <%= button_to "削除", project_path(project),
                        data: { confirm: "プロジェクトに関するすべてのデータが削除されます。本当に削除しますか？" },
                        method: :delete,
                        class: "btn btn-danger btn-sm me-2" %>
          <% end %>
          <%= link_to "戻る", projects_path, class: "btn btn-secondary btn-sm" %>
        </div>
      </div>
    <% end %>
  </div>
</div>