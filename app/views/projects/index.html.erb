<div class="container mt-4">
  <h2 class="mb-4">プロジェクト(施設)一覧</h2>

  <table class="table table-hover table-bordered align-middle mx-auto" style="width: 600px;">
    <thead class="table-dark">
    </thead>
    <tbody>
      <% @projects.each do |project| %>
        <tr>
          <td>
            <div class="d-flex justify-content-between align-items-center">
              <span><%= project.name %></span>
              <%= link_to "編集", edit_project_path(project), class: "btn btn-sm btn-success" %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="mt-3 text-center">
    <%= link_to "新規追加", new_project_path, class: "btn btn-warning" %>
  </div>
</div>