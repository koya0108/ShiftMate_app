<div class="container mt-4">
  <!-- 見出し部分 -->
  <div class="text-center mb-4 pb-2 border-bottom">
    <h2 class="fw-bold text-dark d-inline-block">
      <i class="bi bi-building me-2"></i> プロジェクト(施設)一覧
    </h2>
  </div>

  <table class="table table-hover table-bordered align-middle mx-auto" style="width: 600px;">
    <thead class="table-dark">
    </thead>
    <tbody>
      <% @projects.each do |project| %>
        <tr>
          <td>
            <div class="d-flex justify-content-between align-items-center">
              <%= link_to project.name, project_shift_top_path(project),
                          class: "text-decoration-underline text-dark" %>
              <%= link_to "編集", edit_project_path(project), class: "btn btn-sm btn-success" %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="mt-3 text-center">
    <%= link_to "新規追加", new_project_path, class: "btn btn-warning" %>
  </div>
</div>