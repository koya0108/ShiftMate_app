<div class="container mt-5" style="max-width: 600px;">
  <div class="card shadow-lg border-0">
    <div class="card-header bg-primary text-white text-center fs-5">
      スタッフ情報入力
    </div>
    <div class="card-body p-4">
      <%= form_with model: [@project, staff], local: true do |f| %>
        <div class="mb-4">
          <%= f.label :name, "名前", class: "form-label fw-bold" %>
          <%= f.text_field :name, class: "form-control form-control-lg" %>
        </div>

        <div class="mb-4">
          <%= f.label :position, "役職", class: "form-label fw-bold" %>
          <%= f.text_field :position, class: "form-control", placeholder: "例: SV、OP" %>
        </div>

        <div class="mb-4">
          <label class="form-label fw-bold">休憩室NG選択</label>

          <%= hidden_field_tag "staff[ng_break_room_ids][]", "" %>

          <% @project.break_rooms.each do |room| %>
            <div class="form-check">
              <%= check_box_tag "staff[ng_break_room_ids][]",
                  room.id,
                  staff.ng_break_room_ids.include?(room.id),
                  id: "ng_room_#{room.id}",
                  class: "form-check-input" %>

              <%= label_tag "ng_room_#{room.id}", room.name, class: "form-check-label" %>
            </div>
          <% end %>
        </div>

        <div class="mb-4">
          <%= f.label :comment, "備考", class: "form-label fw-bold" %>
          <%= f.text_field :comment, class: "form-control", maxlength: 15, placeholder: "15文字以内" %>
        </div>

        <div class="text-center">
          <%= f.submit "保存する", class: "btn btn-success btn-lg px-5 shadow-sm" %>
        </div>
      <% end %>
    </div>
  </div>
</div>