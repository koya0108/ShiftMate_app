<div class="container mt-4" style="max-width: 600px;">
  <h2 class="mb-4">
    <i class="bi bi-person-gear me-2"></i> アカウント設定
  </h2>

  <%= form_with model: @user, url: user_path, method: :patch, local: true do |f| %>

    <div class="mb-3">
      <%= f.label :employee_code, "職員コード（ログインID）", class: "form-label fw-bold" %>
      <%= f.text_field :employee_code, class: "form-control", placeholder: "例: nurse_001" %>
    </div>

    <div class="mb-3">
      <%= f.label :email, "メールアドレス", class: "form-label fw-bold" %>
      <%= f.email_field :email, class: "form-control", placeholder: "example@hospital.jp" %>
    </div>

    <div class="text-center mt-4">
      <%= f.submit "更新する", class: "btn btn-primary px-5" %>
    </div>

  <% end %>
</div>