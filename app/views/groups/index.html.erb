<div class="container mt-5">
  <h2 class="mb-4 text-center"><%= @project.name %> のグループ一覧</h2>

  <% if @groups.any? %>
    <table class="table table-striped table-bordered align-middle shadow-sm mx-auto" style="width: 500px;">
      <thead class="table-primary">
        <tr>
          <th scope="col">グループ名</th>
          <th scope="col" class="text-center" style="width: 160px;">操作</th>
        </tr>
      </thead>
      <tbody>
        <% @groups.each do |group| %>
          <tr>
            <td class="fw-bold">
              <i class="bi bi-people-fill me-2 text-secondary"></i><%= group.name %>
            </td>
            <td class="text-center">
              <%= link_to "編集", edit_project_group_path(@project, group), class: "btn btn-sm btn-outline-success me-2" %>
              <%= link_to "削除", project_group_path(@project, group),
                          data: { turbo_method: :delete, turbo_confirm: "本当に削除しますか？" },
                          class: "btn btn-sm btn-outline-danger" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <div class="alert alert-info text-center shadow-sm">
      まだグループが登録されていません。
    </div>
  <% end %>

  <div class="mt-4 text-center">
    <%= link_to "新規登録", new_project_group_path(@project), class: "btn btn-warning btn-lg shadow" %>
  </div>
</div>