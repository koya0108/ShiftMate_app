<h2><%= @shift.shift_date %> のシフト</h2>

<table class="table table-bordered table-hover">
  <thead class="table-dark">
    <tr>
      <th>スタッフ</th>
      <th>グループ</th>
      <th>休憩室</th>
      <th>休憩開始</th>
      <th>休憩終了</th>
      <th>コメント</th>
    </tr>
  </thead>
  <tbody>
    <% @shift.shift_details.includes(:staff, :break_room).each do |detail| %>
      <tr>
        <td><%= detail.staff.name %></td>
        <td><%= Group.find_by(id: detail.group_id)&.name || "-" %></td>
        <td><%= detail.break_room&.name || "-" %></td>
        <td><%= detail.rest_start_time.strftime("%H:%M") %></td>
        <td><%= detail.rest_end_time.strftime("%H:%M") %></td>
        <td><%= detail.comment.presence || "-" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="mt-3 d-flex justify-content-between">

  <%= button_to "削除", project_shift_path(@project, @shift),
                method: :delete,
                data: { confirm: "本当に削除しますか？" },
                class: "btn btn-danger" %>
</div>