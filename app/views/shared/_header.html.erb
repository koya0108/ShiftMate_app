<header class="navbar navbar-dark bg-primary position-relative">
  <div class="container-fluid d-flex justify-content-between align-items-center">

    <!-- ハンバーガーメニュー -->
    <button
      class="btn btn-outline-light"
      id="menu-toggle"
      type="button"
      aria-label="サイドメニュー切り替え">
      ☰
    </button>

    <!-- アプリタイトル -->
    <div class="position-absolute top-25 start-50 translate-middle-x">
      <%= link_to "ShiftMate", projects_path, class: "navbar-brand fw-bold m-0 text-center" %>
    </div>

    <!-- ログアウトボタン -->
    <% if user_signed_in? %>
      <%= button_to destroy_user_session_path,
          method: :delete,
          data: { turbo: false },
          class: "btn btn-outline-light d-flex align-items-center gap-1 px-3 py-1" do %>
        <i class="bi bi-box-arrow-right"></i>
        <span>ログアウト</span>
      <% end %>
    <% end %>
  </div>
</header>