<div class="container mt-5" style="max-width: 600px;">
  <h2 class="mb-4 text-center"><%= @project.name %> の休憩場所一覧</h2>

  <% if @break_rooms.any? %>
    <table class="table table-striped table-bordered align-middle shadow-sm mx-auto">
      <thead class="table-primary">
        <tr>
          <th scope="col">名前</th>
          <th scope="col" class="text-center" style="width: 160px;"></th>
        </tr>
      </thead>
      <tbody>
        <% @break_rooms.each do |break_room| %>
          <tr>
            <td class="fw-bold">
              <i class="bi bi-door-closed-fill me-2 text-secondary"></i><%= break_room.name %>
            </td>
            <td class="text-center">
              <%= link_to "編集", edit_project_break_room_path(@project, break_room),
                          class: "btn btn-sm btn-outline-success me-2" %>
              <%= link_to "削除", project_break_room_path(@project, break_room),
                          data: { turbo_method: :delete, turbo_confirm: "本当に削除しますか？" },
                          class: "btn btn-sm btn-outline-danger" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <div class="alert alert-info text-center shadow-sm">
      まだ休憩場所が登録されていません。
    </div>
  <% end %>

  <div class="mt-4 text-center">
    <%= link_to "新規登録", new_project_break_room_path(@project),
                class: "btn btn-warning btn-lg shadow" %>
  </div>
</div>